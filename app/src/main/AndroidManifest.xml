<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.casodistudiomamange">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CasoDiStudioMaMange">
        <activity
            android:name=".activity.LoggedUser"
            android:exported="true"
            android:theme="@style/Theme.CasoDiStudioMaMange.NoActionBar"/>
        <activity
            android:name=".activity.SwitchLoginSignupGuestActivity"
            android:exported="false"
            />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.CasoDiStudioMaMange.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.QRCodeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name=".activity.CategoryActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RestaurantActivity"
            android:exported="true" />
    </application>

</manifest>